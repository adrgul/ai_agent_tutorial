# Environment Configuration for Observability
#
# Copy this file to .env in your backend directory and adjust values as needed.
# These settings control the observability features.

# ==============================================================================
# Metrics Configuration
# ==============================================================================

# Enable or disable Prometheus metrics collection
# Set to "false" to disable all metrics (useful for testing)
ENABLE_METRICS=true

# Port for Prometheus /metrics HTTP endpoint
# Default: Uses main application port (8000)
# METRICS_PORT=8000

# ==============================================================================
# Environment Labeling
# ==============================================================================

# Deployment environment - affects metric labels
# Values: dev, staging, prod
# This appears in all metrics and helps filter by environment in Grafana
ENVIRONMENT=dev

# Tenant identifier for multi-tenant deployments
# Use organization/customer ID, NOT individual user_id
# This must be low-cardinality (< 100 unique values)
TENANT_ID=default

# Application version for tracking deployments
# Useful for correlating metrics with code changes
APP_VERSION=1.0.0

# ==============================================================================
# Request Correlation
# ==============================================================================

# Enable request ID generation and propagation
# Generates unique request_id for each API call
ENABLE_REQUEST_CORRELATION=true

# Include request_id in log messages automatically
ENABLE_CORRELATED_LOGGING=true

# ==============================================================================
# Logging Configuration
# ==============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==============================================================================
# Cost Tracking
# ==============================================================================

# Enable LLM cost estimation in metrics
# Tracks estimated costs based on token usage
ENABLE_COST_TRACKING=true

# ==============================================================================
# OpenAI Configuration (Required)
# ==============================================================================

# Your OpenAI API key
# This is required for the agent to function
OPENAI_API_KEY=your-api-key-here

# ==============================================================================
# Example Configurations by Environment
# ==============================================================================

# Development:
# ENVIRONMENT=dev
# ENABLE_METRICS=true
# LOG_LEVEL=DEBUG

# Staging:
# ENVIRONMENT=staging
# ENABLE_METRICS=true
# LOG_LEVEL=INFO
# TENANT_ID=staging-tenant

# Production:
# ENVIRONMENT=prod
# ENABLE_METRICS=true
# LOG_LEVEL=WARNING
# TENANT_ID=prod-customer-123
# APP_VERSION=2.1.0
